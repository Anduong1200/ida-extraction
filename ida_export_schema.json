{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://examinate.local/ida-export-schema-v1.json",
    "title": "IDA JSON Export Schema",
    "description": "Schema for IDA Pro cross-reference and function graph exports",
    "type": "object",
    "required": [
        "meta",
        "functions"
    ],
    "definitions": {
        "hexAddress": {
            "type": "string",
            "pattern": "^0x[0-9A-Fa-f]+$",
            "description": "Hexadecimal address string (e.g., '0x401000')"
        },
        "xref": {
            "type": "object",
            "description": "Cross-reference entry",
            "required": [
                "from",
                "to",
                "type"
            ],
            "properties": {
                "from": {
                    "$ref": "#/definitions/hexAddress"
                },
                "to": {
                    "$ref": "#/definitions/hexAddress"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "code_call",
                        "code_jump",
                        "code_flow",
                        "code",
                        "data_read",
                        "data_write",
                        "data_offset",
                        "data"
                    ],
                    "description": "Type of cross-reference"
                },
                "operand_index": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Operand index that references the target"
                },
                "insn_ea": {
                    "$ref": "#/definitions/hexAddress"
                },
                "is_flow": {
                    "type": "boolean",
                    "description": "Whether this is a code flow reference"
                },
                "note": {
                    "type": "string",
                    "description": "Additional notes about this xref"
                }
            }
        },
        "instruction": {
            "type": "object",
            "description": "Disassembled instruction",
            "required": [
                "ea",
                "mnemonic",
                "operands",
                "bytes"
            ],
            "properties": {
                "ea": {
                    "$ref": "#/definitions/hexAddress"
                },
                "mnemonic": {
                    "type": "string",
                    "description": "Instruction mnemonic (e.g., 'mov', 'call', 'push')"
                },
                "operands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Array of operand strings"
                },
                "bytes": {
                    "type": "string",
                    "pattern": "^[0-9A-Fa-f]*$",
                    "description": "Hex-encoded instruction bytes"
                },
                "xrefs_out": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/xref"
                    },
                    "description": "Cross-references from this instruction"
                },
                "comments": {
                    "type": "string",
                    "description": "IDA comments at this address"
                }
            }
        },
        "basicBlock": {
            "type": "object",
            "description": "Basic block in the control flow graph",
            "required": [
                "id",
                "start",
                "end",
                "insns"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique block identifier (format: FUNCADDR_bbN)"
                },
                "start": {
                    "$ref": "#/definitions/hexAddress"
                },
                "end": {
                    "$ref": "#/definitions/hexAddress"
                },
                "insns": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/instruction"
                    },
                    "description": "Instructions in this block"
                },
                "succs": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Successor block IDs"
                },
                "preds": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Predecessor block IDs"
                }
            }
        },
        "function": {
            "type": "object",
            "description": "Function with basic blocks and metadata",
            "required": [
                "name",
                "start",
                "end",
                "size",
                "blocks"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Function name (e.g., 'sub_401000', 'main')"
                },
                "start": {
                    "$ref": "#/definitions/hexAddress"
                },
                "end": {
                    "$ref": "#/definitions/hexAddress"
                },
                "size": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Function size in bytes"
                },
                "ordinal": {
                    "type": "integer",
                    "description": "Function ordinal/index"
                },
                "demangled": {
                    "type": "string",
                    "description": "Demangled C++ name (if applicable)"
                },
                "prototype": {
                    "type": "string",
                    "description": "Function prototype/type signature"
                },
                "blocks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/basicBlock"
                    },
                    "description": "Basic blocks comprising this function"
                },
                "calls_out": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/hexAddress"
                    },
                    "description": "Addresses of functions called by this function"
                },
                "called_by": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/hexAddress"
                    },
                    "description": "Addresses of callers (functions that call this function)"
                },
                "function_xrefs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/xref"
                    },
                    "description": "Function-level cross-references"
                }
            }
        },
        "cfgEdge": {
            "type": "object",
            "description": "Control flow graph edge between blocks",
            "required": [
                "from_block",
                "to_block",
                "type"
            ],
            "properties": {
                "from_block": {
                    "type": "string",
                    "description": "Source block ID"
                },
                "to_block": {
                    "type": "string",
                    "description": "Target block ID"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "fall_through",
                        "branch",
                        "true_branch",
                        "false_branch",
                        "switch_case"
                    ],
                    "description": "Edge type"
                }
            }
        }
    },
    "properties": {
        "meta": {
            "type": "object",
            "description": "Export metadata and provenance",
            "required": [
                "exporter",
                "exporter_version",
                "ida_version",
                "timestamp",
                "idb_name"
            ],
            "properties": {
                "exporter": {
                    "type": "string",
                    "description": "Name of the exporter tool"
                },
                "exporter_version": {
                    "type": "string",
                    "description": "Exporter version (semver)"
                },
                "ida_version": {
                    "type": "string",
                    "description": "IDA Pro version used for export"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Export timestamp (ISO 8601)"
                },
                "idb_name": {
                    "type": "string",
                    "description": "IDA database filename"
                },
                "idb_sha256": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "SHA256 hash of the original input file"
                },
                "notes": {
                    "type": "string",
                    "description": "Additional notes about this export"
                }
            }
        },
        "functions": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/function"
            },
            "description": "Array of all exported functions"
        },
        "xrefs": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/xref"
            },
            "description": "Global cross-reference list (all xrefs in database)"
        },
        "cfg_edges": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/cfgEdge"
            },
            "description": "Flattened CFG edges for visualization"
        }
    }
}